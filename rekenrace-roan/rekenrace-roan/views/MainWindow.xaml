<Window x:Class="rekenrace_roan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:rekenrace_roan"
        xmlns:models="clr-namespace:rekenrace_roan.Models"
        Title="Rekenrace"
        Height="600"
        Width="800">
    <Window.Resources>
        <models:Player x:Key="PlayerModel" />
        <local:StringLengthToBooleanConverter x:Key="StringLengthToBooleanConverter" />

        <!-- Style for High Score Headers -->
        <Style x:Key="HighScoreHeaderStyle"
               TargetType="TextBlock">
            <Setter Property="FontWeight"
                    Value="Bold" />
            <Setter Property="FontSize"
                    Value="16" />
            <Setter Property="Margin"
                    Value="5" />
            <Setter Property="HorizontalAlignment"
                    Value="Left" />
        </Style>

        <!-- Style for High Score Rows -->
        <Style x:Key="HighScoreRowStyle"
               TargetType="TextBlock">
            <Setter Property="Margin"
                    Value="5,2" />
            <Setter Property="HorizontalAlignment"
                    Value="Left" />
        </Style>
        <!-- toggle button-->
        <Style x:Key="ComboBoxToggleButtonStyle"
               TargetType="{x:Type ToggleButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Border CornerRadius="0,5,5,0"
                                BorderThickness="2"
                                BorderBrush="#de1c7e"
                                Padding="5"
                                Background="White">
                            <Path HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Data="M 0 0 L 4 4 L 8 0 Z"
                                  Fill="#de1c7e" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for the TextBox (editable part of the ComboBox) -->
        <Style x:Key="ComboBoxTextBoxStyle"
               TargetType="{x:Type TextBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border CornerRadius="5,0,0,5"
                                BorderThickness="2"
                                BorderBrush="#de1c7e"
                                Background="White">
                            <ScrollViewer x:Name="PART_ContentHost" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for the ComboBox -->
        <Style x:Key="RoundedComboBoxStyle"
               TargetType="{x:Type ComboBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ComboBox}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Border x:Name="Border"
                                    Grid.ColumnSpan="2"
                                    CornerRadius="5"
                                    BorderThickness="2"
                                    BorderBrush="#de1c7e"
                                    Background="White" />
                            <!-- ContentPresenter for selected item -->
                            <ContentPresenter x:Name="ContentSite"
                                              IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="5"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left" />
                            <!-- Placeholder TextBlock -->
                            <TextBlock x:Name="PlaceholderText"
                                       Text="Niveau"
                                       Margin="5"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Foreground="Black"
                                       IsHitTestVisible="False" />
                            <TextBox x:Name="PART_EditableTextBox"
                                     Style="{StaticResource ComboBoxTextBoxStyle}"
                                     HorizontalAlignment="Stretch"
                                     VerticalAlignment="Stretch"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Margin="5"
                                     Visibility="Hidden" />
                            <ToggleButton Grid.Column="1"
                                          Style="{StaticResource ComboBoxToggleButtonStyle}"
                                          Focusable="False"
                                          IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press"
                                          Background="Transparent"
                                          BorderThickness="0" />
                            <Popup x:Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Grid x:Name="DropDown"
                                      SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder"
                                            CornerRadius="5"
                                            BorderThickness="2"
                                            BorderBrush="#de1c7e"
                                            Background="White" />
                                    <ScrollViewer Margin="4,6,4,6"
                                                  SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True"
                                                    KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="HasItems"
                                     Value="False">
                                <Setter TargetName="DropDownBorder"
                                        Property="MinHeight"
                                        Value="95" />
                            </Trigger>
                            <!-- When nothing is selected, hide the ContentSite and show the placeholder -->
                            <DataTrigger Binding="{Binding SelectedItem, RelativeSource={RelativeSource TemplatedParent}}"
                                         Value="{x:Null}">
                                <Setter TargetName="PlaceholderText"
                                        Property="Visibility"
                                        Value="Visible" />
                                <Setter TargetName="ContentSite"
                                        Property="Visibility"
                                        Value="Hidden" />
                            </DataTrigger>
                            <!-- When an item is selected, hide the placeholder -->
                            <DataTrigger Binding="{Binding SelectedItem, RelativeSource={RelativeSource TemplatedParent}}"
                                         Value="{x:Null}">
                                <Setter TargetName="PlaceholderText"
                                        Property="Visibility"
                                        Value="Visible" />
                            </DataTrigger>
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter Property="Foreground"
                                        Value="Gray" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CustomButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="White" />
            <Setter Property="Foreground"
                    Value="#de1c7e" />
            <Setter Property="BorderBrush"
                    Value="#de1c7e" />
            <Setter Property="BorderThickness"
                    Value="2" />
            <Setter Property="FontSize"
                    Value="24" />
            <Setter Property="Width"
                    Value="150" />
            <Setter Property="Height"
                    Value="50" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover trigger -->
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="ButtonBorder"
                                        Property="Background"
                                        Value="LightPink" />
                                <Setter TargetName="ButtonBorder"
                                        Property="BorderBrush"
                                        Value="#de1c7e" />
                                <Setter Property="Foreground"
                                        Value="#de1c7e" />
                            </Trigger>
                            <!-- Disabled trigger -->
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter TargetName="ButtonBorder"
                                        Property="Background"
                                        Value="LightGray" />
                                <Setter TargetName="ButtonBorder"
                                        Property="BorderBrush"
                                        Value="Gray" />
                                <Setter Property="Foreground"
                                        Value="Black" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Top Header with Background -->
        <Border Grid.Row="0"
                Background="#2e0791">
            <TextBlock Text="Welkom bij Rekenrace"
                       VerticalAlignment="Center"
                       Foreground="White"
                       HorizontalAlignment="Left"
                       Margin="10"
                       FontSize="24"
                       FontWeight="Bold" />
        </Border>

        <!-- Input for Name and ComboBox for Difficulty Levels -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 100 0 0">
            <Label Content="Naam:"
                   Foreground="#de1c7e"
                   FontWeight="Bold"
                   Width="47"
                   Height="30"
                   VerticalAlignment="Center" />
            <TextBox x:Name="txtName"
                     Width="200"
                     BorderBrush="#de1c7e"
                     BorderThickness="2"
                     Height="30"
                     Margin="5"
                     Padding="5"
                     Text="{Binding Name, Source={StaticResource PlayerModel}, UpdateSourceTrigger=PropertyChanged}"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Center">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius"
                                Value="5" />
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <ComboBox x:Name="difficultyDropdown"
                      Width="150"
                      Height="30"
                      Margin="5"
                      SelectedValuePath="Content"
                      FontWeight="Bold"
                      Foreground="#de1c7e"
                      SelectedValue="{Binding Difficulty, Source={StaticResource PlayerModel}}"
                      Style="{StaticResource RoundedComboBoxStyle}">
                <ComboBoxItem Content="Makkelijk" />
                <ComboBoxItem Content="Gemiddeld" />
                <ComboBoxItem Content="Moeilijk" />
            </ComboBox>

        </StackPanel>

        <!-- Start Button -->
        <Button x:Name="btnStart"
                Style="{StaticResource CustomButtonStyle}"
                Content="Start"
                Grid.Row="2"
                Click="btnStart_Click"
                IsEnabled="{Binding Name.Length, Source={StaticResource PlayerModel}, Converter={StaticResource StringLengthToBooleanConverter}}" />




        <!-- High Scores Section -->
        <Border Grid.Row="3"
                BorderBrush="#de1c7e"
                BorderThickness="2"
                Margin="20">
            <StackPanel>
                <TextBlock Text="High Scores Top 10"
                           FontSize="20"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="10" />

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Makkelijk Column -->
                    <StackPanel Grid.Column="0"
                                Margin="10">
                        <TextBlock Text="Makkelijk"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   FontSize="18"
                                   Margin="0,0,0,10" />
                        <ListView ItemsSource="{Binding MakkelijkHighScores}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Name}"
                                                   Grid.Column="0" />
                                        <TextBlock Text="{Binding Score, StringFormat='{}{0} van de 10 goed'}"
                                                   Grid.Column="1"
                                                   Margin="10,0" />
                                        <TextBlock Text="{Binding Date, StringFormat='{}{0:dd/MM/yyyy}'}"
                                                   Grid.Column="2" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>

                    <!-- Gemiddeld Column -->
                    <StackPanel Grid.Column="1"
                                Margin="10">
                        <TextBlock Text="Gemiddeld"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   FontSize="18"
                                   Margin="0,0,0,10" />
                        <ListView ItemsSource="{Binding GemiddeldHighScores}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Name}"
                                                   Grid.Column="0" />
                                        <TextBlock Text="{Binding Score, StringFormat='{}{0} van de 10 goed'}"
                                                   Grid.Column="1"
                                                   Margin="10,0" />
                                        <TextBlock Text="{Binding Date, StringFormat='{}{0:dd/MM/yyyy}'}"
                                                   Grid.Column="2" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>

                    <!-- Moeilijk Column -->
                    <StackPanel Grid.Column="2"
                                Margin="10">
                        <TextBlock Text="Moeilijk"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   FontSize="18"
                                   Margin="0,0,0,10" />
                        <ListView ItemsSource="{Binding MoeilijkHighScores}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Name}"
                                                   Grid.Column="0" />
                                        <TextBlock Text="{Binding Score, StringFormat='{}{0} van de 10 goed'}"
                                                   Grid.Column="1"
                                                   Margin="10,0" />
                                        <TextBlock Text="{Binding Date, StringFormat='{}{0:dd/MM/yyyy}'}"
                                                   Grid.Column="2" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

    </Grid>
</Window>