<Window x:Class="rekenrace_roan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:rekenrace_roan"
        xmlns:models="clr-namespace:rekenrace_roan.Models"
        Title="Rekenrace"
        Height="600"
        Width="800">
    <Window.Resources>
        <models:Player x:Key="PlayerModel" />
        <local:StringLengthToBooleanConverter x:Key="StringLengthToBooleanConverter" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Top Header with Background -->
        <Border Grid.Row="0"
                Background="LightBlue">
            <TextBlock Text="Welkom bij Rekenrace"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Margin="10"
                       FontSize="24"
                       FontWeight="Bold" />
        </Border>

        <!-- Input for Name and ComboBox for Difficulty Levels -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="10">
            <Label Content="Naam:"
                   Width="47"
                   Height="30"
                   VerticalAlignment="Center" />
            <TextBox x:Name="txtName"
                     Width="200"
                     Height="30"
                     Margin="5"
                     Text="{Binding Name, Source={StaticResource PlayerModel}, UpdateSourceTrigger=PropertyChanged}"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Center" />
            <ComboBox x:Name="difficultyDropdown"
                      Width="150"
                      Height="30"
                      Margin="5"
                      SelectedValuePath="Content"
                      SelectedValue="{Binding Difficulty, Source={StaticResource PlayerModel}}"
                      SelectedIndex="0">
                <ComboBoxItem IsEnabled="False">Niveau</ComboBoxItem>
                <ComboBoxItem>Makkelijk</ComboBoxItem>
                <ComboBoxItem>Gemiddeld</ComboBoxItem>
                <ComboBoxItem>Moeilijk</ComboBoxItem>
            </ComboBox>
        </StackPanel>

        <!-- Start Button -->
        <Button x:Name="btnStart"
                Width="200"
                Height="100"
                Content="Start"
                Grid.Row="2"
                Click="btnStart_Click"
                IsEnabled="{Binding Name.Length, Source={StaticResource PlayerModel}, Converter={StaticResource StringLengthToBooleanConverter}}" />

        <!-- High Scores Section -->
        <Border Grid.Row="3"
                BorderBrush="Gray"
                BorderThickness="1"
                Margin="20">
            <StackPanel>
                <TextBlock Text="High Scores"
                           FontSize="20"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="10" />
                <ListView x:Name="lvHighScores"
                          Height="200"
                          Margin="10">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding Name}"
                                           Grid.Column="0" />
                                <TextBlock Text="{Binding Score}"
                                           Grid.Column="1" />
                                <TextBlock Text="{Binding Date, StringFormat=dd/MM/yyyy}"
                                           Grid.Column="2" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </Border>
    </Grid>
</Window>